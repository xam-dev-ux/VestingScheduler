# Base RPC URL (optional - if not set, will use OnchainKit RPC with API key)
# Note: Some RPC endpoints like llamarpc.com don't support CORS for browser requests
# NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Your wallet private key for deployment (NEVER COMMIT THIS)
PRIVATE_KEY=your_private_key_here

# OnchainKit API Key (required for Paymaster)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_api_key_here

# WalletConnect Project ID (required for smart wallet capabilities)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Contract addresses (will be filled after deployment)
NEXT_PUBLIC_VESTING_CONTRACT_ADDRESS=

# Base Chain ID
NEXT_PUBLIC_CHAIN_ID=8453

# Basescan API Key (for verification)
BASESCAN_API_KEY=your_basescan_api_key
